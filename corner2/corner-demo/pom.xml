	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central</id>
			<url>http://dev.bjmaxinfo.com:5180/artifactory/repo</url>
		</pluginRepository>
		<pluginRepository>
			<releases>
