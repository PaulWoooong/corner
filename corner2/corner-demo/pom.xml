<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.bjmaxinfo</groupId>
	<artifactId>demo</artifactId>
	<packaging>war</packaging>
	<name>demo</name>
	<version>0.1</version>
	<description>Provides demo some core function</description>
	<developers>
		<developer>
			<id>ghostbb</id>
			<name>Xin Zhao</name>
			<email>ghostbb@bjmaxinfo.com</email>
			<organization>Beijing Maxinfo</organization>
			<roles>
				<role>Developer</role>
			</roles>
		</developer>
	</developers>
	<build>
		<extensions>
			<extension>
				<groupId>com.h2database</groupId>
				<artifactId>h2</artifactId>
				<version>1.0.60</version>
			</extension>
			<extension>
				<groupId>com.oracle</groupId>
				<artifactId>ojdbc14</artifactId>
				<version>10.2.0.2.0</version>
			</extension>
		</extensions>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>config.properties</exclude>
					<exclude>hibernate.cfg.xml</exclude>
					<exclude>**/.svn/**</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/package.html</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/js</directory>
				<includes>
					<include>piano/**/*</include>
				</includes>
			</resource>
			
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
			</testResource>
			<testResource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>config.properties</exclude>
					<exclude>hibernate.cfg.xml</exclude>
					<exclude>**/.svn/**</exclude>
					<exclude>META-INF/*</exclude>
				</excludes>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<optimize>true</optimize>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>package</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy file="${config.file}" tofile="${project.build.directory}/classes/config.properties"/>
								<copy file="${hibernate.cfg.file}" tofile="${project.build.directory}/classes/hibernate.cfg.xml"/>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>net.sf.alchim</groupId>
				<artifactId>winstone-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>embed</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>net.sourceforge.winstone</groupId>
						<artifactId>winstone</artifactId>
						<version>0.9.6</version>
					</dependency>
				</dependencies>
				<configuration>
					<cmdLineOptions>
						<property>
							<name>ajp13Port</name>
							<value>-1</value>
						</property>
					</cmdLineOptions>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<warSourceDirectory>webapp</warSourceDirectory>
					<warSourceExcludes>**/.svn/**</warSourceExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<configuration>
					<contextPath>/</contextPath>
					<webAppSourceDirectory>webapp</webAppSourceDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.bjmaxinfo.maven</groupId>
				<artifactId>maven-database-report-plugin</artifactId>
				<version>1.0-SNAPSHOT</version>
				<configuration>
					<components>
						<component>
							<name>hbm2xls</name>
						</component>
					</components>
					<componentProperties>
						<configurationfile>/src/main/resources/hibernate.cfg.xml</configurationfile>
						<propertyfile>/src/main/resources/database/oracle-test.properties</propertyfile>
						
					</componentProperties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.3</version>
				<inherited>true</inherited>
				<configuration>
					<argLine>-Xmx500m</argLine>
					<systemProperties>
						<property>
							<name>user.language</name>
							<value>en_US</value>
						</property>
					</systemProperties>
					<suiteXmlFiles>
						<!--   suiteXmlFile>src/test/conf/integration.xml</suiteXmlFile -->
						<suiteXmlFile>src/test/conf/testng.xml</suiteXmlFile>
					</suiteXmlFiles>
					<!--  redirectTestOutputToFile>true</redirectTestOutputToFile -->
					<!-- groups>pdf,price,equipment,saleservice,jurisdiction,order,purchase,quality,system,util,tapestry,tree,dbservice,model</groups -->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>${cobertura-plugin-version}</version>
				<executions>
					<execution>
						<id>clean</id>
						<goals>
							<goal>clean</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>db</name>
					<value>dev</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.h2database</groupId>
					<artifactId>h2</artifactId>
					<version>1.0.60</version>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
			<properties>
				<config.file> src/main/resources/config/config-h2-dev.properties</config.file>
				<hibernate.cfg.file>src/main/resources/config/hibernate/hibernate.cfg.product.xml</hibernate.cfg.file>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>db</name>
					<value>test</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.h2database</groupId>
					<artifactId>h2</artifactId>
					<version>1.0.60</version>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
			<properties>
				<config.file>src/main/resources/config/config-h2.properties</config.file>
				<hibernate.cfg.file>src/main/resources/config/hibernate/hibernate.cfg.update.xml</hibernate.cfg.file>
			</properties>
		</profile>
		<profile>
			<id>oracle</id>
			<activation>
				<property>
					<name>db</name>
					<value>oracle</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.oracle</groupId>
					<artifactId>ojdbc14</artifactId>
					<version>10.2.0.2.0</version>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
			<properties>
				<config.file> src/main/resources/config/config-oracle.properties</config.file>
				<maven.test.skip>true</maven.test.skip>
				<hibernate.cfg.file>src/main/resources/config/hibernate/hibernate.cfg.product.xml</hibernate.cfg.file>
			</properties>
		</profile>
		<profile>
			<id>demo</id>
			<activation>
				<property>
					<name>db</name>
					<value>demo</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.oracle</groupId>
					<artifactId>ojdbc14</artifactId>
					<version>10.2.0.2.0</version>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
			<properties>
				<config.file> src/main/resources/config/config-demo.properties</config.file>
				<maven.test.skip>true</maven.test.skip>
				<hibernate.cfg.file>src/main/resources/config/hibernate/hibernate.cfg.product.xml</hibernate.cfg.file>
			</properties>
		</profile>
	</profiles>
	<repositories>
		<repository>
			<id>central</id>
			<name>maxinfo</name>
			<url>http://dev.bjmaxinfo.com:5180/artifactory/repo</url>
		</repository>
		<repository>
			<releases>
				<enabled>false</enabled>
			</releases>
